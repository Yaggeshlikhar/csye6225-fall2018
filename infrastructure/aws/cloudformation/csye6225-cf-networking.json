{
  "AWSTemplateFormatVersion" : "2010-09-09",
  "Description" : "Infrastructure",
  "Parameters":{
     "Name":{
        "Type":"String"
  }
},
  "Resources" : {
    "VPC" : {
      "Type" : "AWS::EC2::VPC",
      "Properties" : {
        "CidrBlock" : "10.0.0.0/16",
        "Tags" : [ {"Key" : "Name",
                    "Value" :{
                      "Fn::Join":[
                         "",
                         [{"Ref":"Name"
                         },
                         "Vpc"]
]
} }] }      
    },

    "Subnet1" : {
      "Type" : "AWS::EC2::Subnet",
      "Properties" : {
        "VpcId" : { "Ref" : "VPC" },
        "CidrBlock" : "10.0.1.0/24",
        "Tags" : [ {"Key" : "Name",
                    "Value" :{
                      "Fn::Join":[
                         "",
                         [{"Ref":"Name"
                         },
                         "subnet1"]
]
} }] }      
    },

    "Subnet2" : {
      "Type" : "AWS::EC2::Subnet",
      "Properties" : {
        "VpcId" : { "Ref" : "VPC" },
        "CidrBlock" : "10.0.2.0/24",
        "Tags" : [ {"Key" : "Name",
                    "Value" :{
                      "Fn::Join":[
                         "",
                         [{"Ref":"Name"
                         },
                         "subnet2"]
]
} }] }      
    },

    "Subnet3" : {
      "Type" : "AWS::EC2::Subnet",
      "Properties" : {
        "VpcId" : { "Ref" : "VPC" },
        "CidrBlock" : "10.0.3.0/24",
        "Tags" : [ {"Key" : "Name",
                    "Value" :{
                      "Fn::Join":[
                         "",
                         [{"Ref":"Name"
                         },
                         "subnet3"]
]
} }] }      
    },

    "InternetGateway" : {
      "Type" : "AWS::EC2::InternetGateway",
      "Properties" : {
        "Tags" : [ {"Key" : "Name",
                    "Value" :{
                      "Fn::Join":[
                         "",
                         [{"Ref":"Name"
                         },
                         "Internetgatway"]
]
} }] }      
    },

    "AttachGateway" : {
       "Type" : "AWS::EC2::VPCGatewayAttachment",
       "Properties" : {
         "VpcId" : { "Ref" : "VPC" },
         "InternetGatewayId" : { "Ref" : "InternetGateway" }
       }
    },

    "RouteTable" : {
      "Type" : "AWS::EC2::RouteTable",
      "Properties" : {
        "VpcId" : {"Ref" : "VPC"},
        "Tags" : [ {"Key" : "Name",
                    "Value" :{
                      "Fn::Join":[
                         "",
                         [{"Ref":"Name"
                         },
                         "routetable"]
]
} }] }      
    },

    "SubnetRouteTableAssociation1" : {
         "Type" : "AWS::EC2::SubnetRouteTableAssociation",
         "Properties" : {
            "SubnetId" : { "Ref" : "Subnet1" },
            "RouteTableId" : { "Ref" : "RouteTable" }
         }
      },

      "SubnetRouteTableAssociation2" : {
         "Type" : "AWS::EC2::SubnetRouteTableAssociation",
         "Properties" : {
            "SubnetId" : { "Ref" : "Subnet2" },
            "RouteTableId" : { "Ref" : "RouteTable" }
         }
      },
     
      "SubnetRouteTableAssociation3" : {
         "Type" : "AWS::EC2::SubnetRouteTableAssociation",
         "Properties" : {
            "SubnetId" : { "Ref" : "Subnet3" },
            "RouteTableId" : { "Ref" : "RouteTable" }
         }
      },

    "Route" : {
      "Type" : "AWS::EC2::Route",
      "DependsOn" : "AttachGateway",
      "Properties" : {
        "RouteTableId" : { "Ref" : "RouteTable" },
        "DestinationCidrBlock" : "0.0.0.0/0",
        "GatewayId" : { "Ref" : "InternetGateway" }
      }
    }
  
  }
}
